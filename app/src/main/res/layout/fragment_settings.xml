<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SettingsFragment">
    <androidx.cardview.widget.CardView
        android:id="@+id/moviecard"
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:layout_gravity="center">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/image_admin"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:src="@drawable/user_page"/>
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/role_xml_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R O L E"
                android:layout_below="@id/image_admin"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/role_xml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ROLE"
                android:layout_below="@id/role_xml_title"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/username_xml_title"
                android:layout_below="@id/role_xml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="U S E R N A M E"/>
            <TextView
                android:id="@+id/username_xml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USERNAME"
                android:layout_below="@id/username_xml_title"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/email_xml_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E M A I L"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/username_xml"
                android:layout_marginTop="10dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/email_xml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMAIL"
                android:layout_below="@id/email_xml_title"
                android:layout_centerHorizontal="true"
                />
            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/btn_logout_pengguna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/email_xml"
                android:layout_centerHorizontal="true"
                android:text="L O G O U T"
                android:backgroundTint="@color/orange"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>